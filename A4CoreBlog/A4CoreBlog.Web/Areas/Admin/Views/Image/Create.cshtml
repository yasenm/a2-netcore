@model SystemImageCreateOrEditViewModel

    <div class="container">
        <form asp-controller="Image"
              asp-action="Create"
              asp-area="@GlobalConstants.AdminArea"
              method="post"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Alt"></label>
                <input type="text" asp-for="Alt" value="@Model.Alt" class="form-control" />
                <span asp-validation-for="Alt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" value="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Summary"></label>
                <input type="text" asp-for="Summary" value="@Model.Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageRawContent">Upload one or more image files using this fielsd:</label>
                <br />
                <input type="file" asp-for="ImageRawContent" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    @section scripts{
        <environment names="Development">
            <script src="~/js/tinymce.min.js"></script>
            <script src="~/js/custom/tmce.js"></script>
        </environment>

        <environment names="Staging, Production">
            <script src="~/js/custom/min/site.min.js"></script>
        </environment>

        <script>
            app.tinymce.textareaInit();
        </script>
    }